@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to Our E-commerce Store</h1>
    <p>Find great products at amazing prices!</p>
    <a asp-controller="Product" asp-action="Index" class="btn btn-primary">View Our Products</a>
</div>

@model List<EcommerceMVC.Models.Product>

@{
    ViewData["Title"] = "Products";
}

<h1>Our Products</h1>

<div class="row">
    @foreach (var product in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">@product.Name</h5>
                    <p class="card-text">@product.Description</p>
                    <p class="card-text"><strong>Price: $@product.Price.ToString("0.00")</strong></p>
                    <a asp-action="Details" asp-controller="Product" asp-route-id="@product.Id" class="btn btn-primary">View Details</a>
                </div>
            </div>
        </div>
    }
</div>